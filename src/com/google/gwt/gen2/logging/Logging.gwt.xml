<module>

	<!--  Sets up dependent code -->
	<inherits name='com.google.gwt.gen2.event.Event' />
	<inherits name='com.google.gwt.gen2.widgetbase.WidgetBase' />

	<!--  Sets up source path -->
	<source path="shared" />
	<source path="impl/shared" />
	<source path="impl/client" />
	<source path="handler/client" />
	<super-source path="translatable" />

	<!--  Sets up remote logging path -->
	<servlet path='/logging'
		class='com.google.gwt.gen2.logging.server.RemoteLoggingService' />



	<!-- Defines the logging property -->
	<define-property name="logging" values="all,off,minimal" />
	<set-property name="logging" value="all" />


	<!--
      Bindings for LogImpl.
  -->

	<replace-with class="com.google.gwt.gen2.logging.impl.client.LogImplAll">
		<when-type-is class="com.google.gwt.gen2.logging.impl.shared.LogImpl" />
		<when-property-is name="logging" value="all" />
	</replace-with>

	<replace-with class="com.google.gwt.gen2.logging.impl.shared.LogImplMinimal">
		<when-type-is class="com.google.gwt.gen2.logging.impl.shared.LogImpl" />
		<when-property-is name="logging" value="minimal" />
	</replace-with>

	<replace-with class="com.google.gwt.gen2.logging.impl.shared.LogImplOff">
		<when-type-is class="com.google.gwt.gen2.logging.impl.shared.LogImpl" />
		<when-property-is name="logging" value="off" />
	</replace-with>


	<!--
		Sets default client log handler. Extensions of the logging system can
		use a different default client log handler.
	-->
	<replace-with
		class="com.google.gwt.gen2.logging.handler.client.ClientConsoleLogHandler">
		<when-type-is
			class="com.google.gwt.gen2.logging.shared.DefaultClientLogHandler" />
	</replace-with>


	<!-- 
    Bindings for  ClientConsoleLogHandler.
  -->
	<replace-with
		class="com.google.gwt.gen2.logging.handler.client.ClientConsoleLogHandler.Console">
		<when-type-is
			class="com.google.gwt.gen2.logging.handler.client.ClientConsoleLogHandler.Impl" />
		<any>
			<when-property-is name="user.agent" value="opera" />
			<when-property-is name="user.agent" value="safari" />
		</any>
	</replace-with>

	<replace-with
		class="com.google.gwt.gen2.logging.handler.client.ClientConsoleLogHandler.Popup">
		<when-type-is
			class="com.google.gwt.gen2.logging.handler.client.ClientConsoleLogHandler.Impl" />
		<when-property-is name="user.agent" value="ie6" />
	</replace-with>

	<replace-with
		class="com.google.gwt.gen2.logging.handler.client.ClientConsoleLogHandler.Opera">
		<when-type-is
			class="com.google.gwt.gen2.logging.handler.client.ClientConsoleLogHandler.Impl" />
		<when-property-is name="user.agent" value="opera" />
	</replace-with>

	<replace-with
		class="com.google.gwt.gen2.logging.handler.client.ClientConsoleLogHandler.Firebug">
		<when-type-is
			class="com.google.gwt.gen2.logging.handler.client.ClientConsoleLogHandler.Impl" />
		<any>
			<when-property-is name="user.agent" value="gecko1_8" />
			<when-property-is name="user.agent" value="gecko" />
		</any>
	</replace-with>
</module>