<!-- A file to define the test sets for Incubator testing -->

<project name="testsets">

  <!-- Default test set: -->
  <patternset id="default.tests" >
    <include name="**/*Test.class" />
    <exclude name="**/*VisualTest.class" />
  </patternset>

  <!-- Hosted mode tests: -->
  <fileset id="default.hosted.tests" dir="${javac.junit.out}" >
     <patternset refid="default.tests" />

     <!-- here's how to exclude a given test, if you need to:
      <exclude name="com/google/gwt/junit/client/ParallelRemoteTest.class" />
     -->
  </fileset>

  <!-- Web mode tests: -->
  <fileset id="default.web.tests" dir="${javac.junit.out}" >
     <patternset refid="default.tests" />
  </fileset>

</project>  
