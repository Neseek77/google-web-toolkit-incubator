<module>

	<!-- Inherit the core Web Toolkit stuff.                  -->
	<inherits name='com.google.gwt.user.User'/>
  <inherits name='com.google.gwt.widgetideas.WidgetIdeas'/>
  <inherits name='com.google.gwt.widgetideas.ScrollTable'/>

	<!-- Specify the app entry point class.                   -->
	<entry-point class='com.google.gwt.demos.scrolltable.client.PagingScrollTableDemo'/>
  
  <stylesheet src='ScrollTableDemo.css'/>
  
  <!-- Define the RPC service -->
  <servlet path="/datasource" class="com.google.gwt.demos.scrolltable.client.DataSourceServiceImpl"/>
</module>
